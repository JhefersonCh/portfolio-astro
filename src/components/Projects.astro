---
import GitHub from './icons/GitHub.astro';
import Arrow from './icons/Arrow.astro';
import { PROJECTS } from '../constants/project.const';
import Url from './icons/Url.astro';
---

<div class="flex flex-col">
  {
    PROJECTS.map(
      ({ img, title, description, tags, link, github, id }, index) =>
        index < 3 ? (
          <article class="flex flex-col md:flex-row md:gap-y-0 gap-y-4 gap-x-6 items-center py-6 border-b border-white/10 last:border-none project">
            <div class="w-full md:w-1/2 flex justify-center flex-col gap-y-2">
              <div class="relative overflow-hidden rounded shadow-2xl shadow-white/10 h-fit">
                <a href={`projects/${id}`}>
                  <img
                    class="w-full hover:scale-110 transition-all duration-300"
                    src={img}
                    alt={`Captura de pantalla del proyecto ${title}`}
                  />
                </a>
              </div>

              <ul class="flex gap-2 flex-wrap md:justify-start justify-center">
                {tags.map((tag) => (
                  <li
                    class={`flex items-center  border border-white/20 rounded-full px-3 py-1 text-sm hover:scale-105 
                  ${typeof tag === 'object' && typeof tag !== 'string' ? tag.class : null}`}
                  >
                    {typeof tag === 'object' && typeof tag !== 'string' ? (
                      <span class="flex items-center gap-x-2">
                        <tag.icon class="size-3 md:size-4" />
                        {tag.name}
                      </span>
                    ) : typeof tag === 'string' ? (
                      tag
                    ) : null}
                  </li>
                ))}
              </ul>
            </div>
            <div class=" w-full md:w-1/2">
              <h3
                transition:name={`title-${id}`}
                class="text-2xl font-semibold text-yellow-100 mb-2"
              >
                {title}
              </h3>
              <p class="text-md text-gray-300 mb-4 text-pretty whitespace-pre-line">
                {description}
              </p>
              <div class="flex gap-x-2 justify-center md:justify-start">
                {github && (
                  <a
                    role="button"
                    href={github}
                    target="_blank"
                    class="flex flex-row gap-x-3 items-center rounded border-white/20 border-2 px-2 md:px-4 py-1 md:py-2 w-fit hover:bg-white/10 transition-all duration-300"
                  >
                    <GitHub class="size-4" />
                    Código
                  </a>
                )}
                {link && (
                  <a
                    role="button"
                    href={link}
                    target="_blank"
                    class="flex flex-row gap-x-3 items-center rounded border-white/20 border-2 px-2 md:px-4 py-1 md:py-2 w-fit hover:bg-white/10 transition-all duration-300"
                  >
                    <Url class="size-5" />
                    Proyecto
                  </a>
                )}
                <a
                  role="button"
                  href={`projects/${id}`}
                  class="flex flex-row gap-x-3 items-center rounded border-white/20 border-2 px-2 md:px-4 py-1 md:py-2 w-fit hover:bg-white/10 transition-all duration-300"
                >
                  <Arrow class="size-5" />
                  Detalles
                </a>
              </div>
            </div>
          </article>
        ) : (
          <div class="show-more-content">
            <article class="flex flex-col md:flex-row md:gap-y-0 gap-y-4 gap-x-6 items-center py-6 border-b border-white/10 ">
              <div class="w-full md:w-1/2 flex justify-center flex-col gap-y-2">
                <div class="relative overflow-hidden rounded shadow-2xl shadow-white/10 h-fit">
                  <a href={`projects/${id}`}>
                    <img
                      class="w-full hover:scale-110 transition-all duration-300"
                      src={img}
                      alt={`Captura de pantalla del proyecto ${title}`}
                    />
                  </a>
                </div>

                <ul class="flex gap-2 flex-wrap md:justify-start justify-center">
                  {tags.map((tag) => (
                    <li
                      class={`flex items-center  border border-white/20 rounded-full px-3 py-1 text-sm hover:scale-105 
                  ${typeof tag === 'object' && typeof tag !== 'string' ? tag.class : null}`}
                    >
                      {typeof tag === 'object' && typeof tag !== 'string' ? (
                        <span class="flex items-center gap-x-2">
                          <tag.icon class="size-3 md:size-4" />
                          {tag.name}
                        </span>
                      ) : typeof tag === 'string' ? (
                        tag
                      ) : null}
                    </li>
                  ))}
                </ul>
              </div>
              <div class=" w-full md:w-1/2">
                <h3
                  transition:name={`title-${id}`}
                  class="text-2xl font-semibold text-yellow-100 mb-2"
                >
                  {title}
                </h3>
                <p class="text-md text-gray-300 mb-4 text-pretty whitespace-pre-line">
                  {description}
                </p>
                <div class="flex gap-x-4 justify-center md:justify-start">
                  {github && (
                    <a
                      role="button"
                      href={github}
                      target="_blank"
                      class="flex flex-row gap-x-3 items-center rounded border-white/20 border-2 px-4 py-2 w-fit hover:bg-white/10 transition-all duration-300"
                    >
                      <GitHub class="size-4" />
                      Código
                    </a>
                  )}
                  {link && (
                    <a
                      role="button"
                      href={link}
                      target="_blank"
                      class="flex flex-row gap-x-3 items-center rounded border-white/20 border-2 px-4 py-2 w-fit hover:bg-white/10 transition-all duration-300"
                    >
                      <Url class="size-5" />
                      Proyecto
                    </a>
                  )}
                  <a
                    role="button"
                    href={`projects/${id}`}
                    class="flex flex-row gap-x-3 items-center rounded border-white/20 border-2 px-2 md:px-4 py-1 md:py-2 w-fit hover:bg-white/10 transition-all duration-300"
                  >
                    <Arrow class="size-5" />
                    Detalles
                  </a>
                </div>
              </div>
            </article>
          </div>
        ),
    )
  }
  {
    PROJECTS.length > 3 && (
      <a
        id="show-more"
        role="button"
        class="mt-5 flex justify-center items-center space-x-2 md:w-1/3 w-full mx-auto hover:font-bold hover:text-l transition-all duration-300"
      >
        <div class="flex-grow border-t border-white/20" />
        <h3 class="border-white/20" id="text">
          {'Ver todos'}
        </h3>
        <div class="flex-grow border-t border-white/20" />
      </a>
    )
  }
</div>

<script is:inline>
  (function () {
    const showMore = document.getElementById('show-more');
    if (!showMore) return;

    const showMoreContent = document.querySelectorAll('.show-more-content');

    showMore.addEventListener('click', () => {
      showMoreContent.forEach((content) => {
        content.classList.toggle('show');
      });
      const text = document.getElementById('text');
      text.textContent =
        text.textContent === ' Ver todos ' || text.textContent === 'Ver todos'
          ? 'Ocultar'
          : 'Ver todos';
    });
  })();
</script>

<style>
  .show-more-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-out;
  }

  .show-more-content.show {
    max-height: 1000px;
    transition: max-height 0.5s ease-in;
  }
</style>
